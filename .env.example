# API Keys Configuration
# Copy this file to .env and fill in your actual API keys

# Alpha Vantage (Free tier: 5 API calls/min, 500/day)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io (Paid - for Phase 4)
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_key_here

# Tradier (Paid - for real-time options data)
# Get your key at: https://developer.tradier.com/
TRADIER_API_KEY=your_tradier_key_here
TRADIER_ACCOUNT_ID=your_account_id_here

# TD Ameritrade (Optional - for Phase 4)
TD_API_KEY=your_td_api_key_here
TD_REDIRECT_URI=https://localhost

# Alert System Configuration
# SendGrid (Email alerts)
SENDGRID_API_KEY=your_sendgrid_key_here
ALERT_EMAIL_FROM=alerts@reversionhunter.com
ALERT_EMAIL_TO=your_email@example.com

# Twilio (SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_FROM=+1234567890
TWILIO_PHONE_TO=+1234567890

# Telegram Bot (Push notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Application Settings
APP_ENV=development
DEBUG=True
CACHE_ENABLED=True
CACHE_EXPIRY_MINUTES=15

# Scanner Configuration
RSP_SPY_SPREAD_THRESHOLD=8.0
MIN_EXPECTED_VALUE=0.20
MAX_POSITIONS=15
POSITION_SIZE_PERCENT=2.5

# Database
DATABASE_URL=sqlite:///data/reversion_hunter.db
